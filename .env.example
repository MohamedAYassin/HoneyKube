# HoneyKube Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# OpenRouter LLM Configuration (Required)
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# LLM Model to use (see https://openrouter.ai/models for options)
# Popular choices:
#   - google/gemini-2.0-flash-001 (fast, cheap)
#   - google/gemini-pro (balanced)
#   - anthropic/claude-3.5-sonnet (high quality)
#   - openai/gpt-4o-mini (fast, cheap)
#   - openai/gpt-4o (high quality)
#   - meta-llama/llama-3.1-70b-instruct (open source)
LLM_MODEL=google/gemini-2.0-flash-001

# OpenRouter API base URL (default should work for most cases)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# LLM Generation Settings
# =============================================================================
# Temperature for response generation (0.0-1.0, higher = more creative)
LLM_TEMPERATURE=0.7

# Maximum tokens in LLM response
LLM_MAX_TOKENS=4096

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Number of retries for failed API calls
MAX_RETRIES=3

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Service Ports (usually no need to change)
# =============================================================================
# Scanner Detector port
SCANNER_DETECTOR_PORT=8081

# LLM Planner port
LLM_PLANNER_PORT=8082

# Artifact Sink port
ARTIFACT_SINK_PORT=8083

# =============================================================================
# Honeypot Ports (external facing)
# =============================================================================
# Apache honeypot
APACHE_PORT=8080

# WordPress honeypot
WORDPRESS_PORT=8000

# Next.js honeypot (CVE-2025-55182 / CVE-2025-66478)
NEXTJS_PORT=3000
